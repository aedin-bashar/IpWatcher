{
  "Ipify": {
    "BaseUrl": "https://api.ipify.org"
  },
  "ConnectionStrings": {
    "IpWatcher": "Data Source=data/ipwatcher.sqlite"
  },
  "Email": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "UseSsl": true,
    "UserName": "",
    "Password": "",
    "From": "",
    "To": "",
    "SubjectPrefix": "[IpWatcher]"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Jobs": {
    "CheckIpChange": {
      "IntervalMinutes": 5
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "IpWatcher.Worker"
    }
  }
}
